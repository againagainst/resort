    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}"
        },
        {
            "name": "Launch Resort",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/resort/launch.py",
            "args": [
                "--config=${workspaceFolder}/data/config.json",
                "--output=${workspaceFolder}/data/output",
                "--server=http://localhost:8888"
            ]
        },
        {
            "name": "Debug Basic REST server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/basic_rest/app.py",
            "args": [
            ]
        }
    ]
}